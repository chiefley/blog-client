{
  "project": {
    "name": "XBlog React Client",
    "description": "React/TypeScript blog client with WordPress headless CMS backend",
    "type": "react-typescript",
    "framework": "vite"
  },
  "files": {
    "include": [
      "src/**/*.{ts,tsx,js,jsx}",
      "public/**/*",
      "*.{json,md,ts,js}",
      "vite.config.ts",
      "tsconfig.json",
      "package.json"
    ],
    "exclude": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      "*.log",
      ".env.local",
      ".env.production"
    ]
  },
  "development": {
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "testCommand": "npm run test",
    "lintCommand": "npm run lint"
  },
  "context": {
    "architecture": "React SPA with WordPress headless CMS",
    "keyTechnologies": [
      "React 18",
      "TypeScript",
      "Material-UI (MUI)",
      "Vite",
      "WordPress REST API"
    ],
    "deploymentTarget": "Static hosting with subdirectory support"
  }
}